datasource db {
  provider = "postgresql"
  url = "***"
}

generator prisma_client {
  provider = "prisma-client-js"
}

model User {
  id            String   @default(uuid()) @id
  createdAt     DateTime @default(now())
  discordId     String   @unique
  token         String
  refreshToken  String
  tokenExpires  DateTime
  username      String
  discriminator String
  playedGames   Player[]
  points        Int      @default(0)
}

model Game {
  id              String   @default(uuid()) @id
  createdAt       DateTime @default(now())
  reportedAt      DateTime
  startedAt       DateTime
  durationSeconds Int
  players         Player[]
}

model Player {
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  game        Game     @relation(fields: [gameId], references: [id])
  gameId      String
  won         Boolean
  teamName    String
  teamColor   String
  turnCount   Int
  turnTime    Int
  retreatTime Int

  @@id([userId, gameId])
}
